@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginSharedLayout.cshtml";
}

<h2>Login to Your Account</h2>

@using (Html.BeginForm("Login", "Register", FormMethod.Post))
{
    <div class="simple-form-container">
        <div class="form-group">
            @Html.Label("Username")
            @Html.TextBox("username")
        </div>
        <div class="form-group">
            @Html.Label("Password")
            @Html.Password("password")
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
}

<style>
    .simple-form-container {
        max-width: 300px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        width: 100%;
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }
</style>
