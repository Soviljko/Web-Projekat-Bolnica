@model WebProjekat.Models.Appointment
@{
    ViewBag.Title = "Appointment Creation";
    Layout = "~/Views/Shared/_DoctorSharedLayout.cshtml";
}

<h2>Appointment Creation Page</h2>

@using (Html.BeginForm("AppointmentCreation", "Doctor", FormMethod.Post))
{
    <div class="appointment-create-container">
        <h2>Create New Appointment</h2>

        <div class="form-group">
            <label for="AppointmentDate">Date & Time of Appointment:</label>
            @Html.TextBoxFor(model => model.AppointmentDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", @type = "datetime-local" })
        </div>

        <div class="form-group">
            <label for="DescriptionOfTherapy">Description:</label>
            @Html.TextBoxFor(model => model.DescriptionOfTherapy, new { @class = "form-control", placeholder = "Enter description" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Create Appointment</button>
        </div>
    </div>
}

<style>
    .appointment-create-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-block {
        width: 100%;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }
</style>
